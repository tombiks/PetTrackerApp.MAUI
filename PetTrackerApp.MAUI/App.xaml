<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PetTrackerApp.MAUI"
             x:Class="PetTrackerApp.MAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Imageleri cache ediyoruz burada, sürekli sayfada tekrar yüklemesin diye--> 
            <FileImageSource x:Key="PetPlus_Logo" File="petplus_logo.svg" />
            <FileImageSource x:Key="PetPlus_Text" File="petplus_text.svg" />
            <FileImageSource x:Key="Icon_Avatar" File="icon_pet_avatar_default.svg" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
